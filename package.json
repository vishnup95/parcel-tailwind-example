{
  "name": "animatedbuttons",
  "scripts": {
    "start": "npm-run-all --parallel 'watch:*'",
    "build": "npm-run-all --parallel 'prod:*'",
    "watch:start": "parcel serve index.html",
    "watch:css": "tailwindcss -i style.css -o tailwind.css -w",
    "prod:build": "parcel build index.html",
    "prod:css": "NODE_ENV=production tailwindcss -i tailwind.css -o prod.css --minify"
  },
  "browserslist": "> 0.2%",
  "devDependencies": {
    "autoprefixer": "latest",
    "cssnano": "^5.0.6",
    "npm-run-all": "^4.1.5",
    "parcel": "next",
    "postcss": "^8.3.5",
    "postcss-cli": "^8.3.1",
    "postcss-import": "^14.0.2",
    "tailwindcss": "latest"
  }
}